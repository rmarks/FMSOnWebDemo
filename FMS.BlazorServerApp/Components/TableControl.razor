@typeparam TItem

<table class="table table-hover">
    <thead class="thead-light">
        <tr>@TableHeader</tr>
    </thead>
    <tbody>
        @foreach (var item in Items)
        {
            <tr class="@(item == selectedItem ? "bg-primary text-white" : "")" style="cursor: default"
                @onclick="@(() => selectedItem = item)" @ondblclick="@(() => ItemSelected.InvokeAsync(item.ItemId))">
                @RowTemplate(item)
            </tr>
        }
    </tbody>
</table>

