@if (display)
{
    <div class="modal d-block" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">@Title</h5>
                    <button type="button" class="close" @onclick="Close" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>@ChildContent</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="@(() => HandleConfirm(false))">Ei</button>
                    <button type="button" class="btn btn-primary" @onclick="@(() => HandleConfirm(true))">Jah</button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private bool display;

    [Parameter]
    public string Title { get; set; }

    [Parameter]
    public RenderFragment ChildContent { get; set; }

    [Parameter]
    public EventCallback<bool> OnConfirm { get; set; }

    public void Show()
    {
        display = true;
        StateHasChanged();
    }

    private void Close()
    {
        display = false;
    }

    private void HandleConfirm(bool isConfirmed)
    {
        OnConfirm.InvokeAsync(isConfirmed);
        Close();
    }
}
