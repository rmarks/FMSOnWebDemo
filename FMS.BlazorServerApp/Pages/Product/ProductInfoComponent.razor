<div class="p-3 bg-light mb-2">
    <button type="button" class="close" 
            @onclick="@(() => ProductBaseInfoRemoved.InvokeAsync(ProductBaseInfo))">
        X
    </button>
    <h4 class="text-center">@ProductBaseInfo.ProductBaseCode</h4>

    <ul class="list-group">
        @foreach (var location in ProductBaseInfo.Locations)
        {
        <li class="list-group-item p-0">
            <div class="text-primary m-2">@location.LocationName</div>
            <ul class="list-group">
                @foreach (var product in location.Products)
                {
                    <li class="list-group-item d-flex px-2">
                        <div class="mr-auto">@product.ProductCode</div>
                        <div class="ml-auto">@product.FreeQuantity (@product.StockQuantity-@product.ReservedQuantity)</div>
                    </li>
                }
            </ul>
        </li>
        }
    </ul>
</div>


@code {
    [Parameter] public ProductBaseInfoDto ProductBaseInfo { get; set; }

    [Parameter] public EventCallback<ProductBaseInfoDto> ProductBaseInfoRemoved { get; set; }
}
